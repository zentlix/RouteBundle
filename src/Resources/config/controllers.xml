<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false"/>
        <service id="zentlix_route.controller.admin.path_controller"
                 class="Zentlix\RouteBundle\UI\Http\Web\Controller\Admin\PathController"
                 public="true">
            <argument type="service" id="translator"/>
            <argument type="service" id="Symfony\Component\Security\Csrf\CsrfTokenManagerInterface"/>
            <argument type="service" id="zentlix_main.bundles" />
            <argument type="service" id="zentlix_main.command_bus"/>
            <argument type="service" id="zentlix_main.query_bus"/>
            <tag name="controller.service_arguments"/>
        </service>
        <service id="zentlix_route.controller.admin.route_controller"
                 class="Zentlix\RouteBundle\UI\Http\Web\Controller\Admin\RouteController"
                 public="true">
            <argument type="service" id="translator"/>
            <argument type="service" id="Symfony\Component\Security\Csrf\CsrfTokenManagerInterface"/>
            <argument type="service" id="zentlix_main.bundles" />
            <argument type="service" id="zentlix_main.command_bus"/>
            <argument type="service" id="zentlix_main.query_bus"/>
            <tag name="controller.service_arguments"/>
        </service>
        <service id="zentlix_route.controller.blank_controller"
                 class="Zentlix\RouteBundle\UI\Http\Web\Controller\BlankController"
                 public="true">
            <argument type="service" id="zentlix_main.sites"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="zentlix_main.command_bus"/>
            <argument type="service" id="zentlix_main.query_bus"/>
            <tag name="zentlix.route.controller"/>
            <tag name="controller.service_arguments"/>
        </service>
        <service alias="zentlix_route.controller.blank_controller" id="Zentlix\RouteBundle\UI\Http\Web\Controller\BlankController" public="true"/>
    </services>
</container>